<section id="viewhotelDetails">
    <div class="profile"><img src="/profile.png" alt="default user">
        <h3>User Info:</h3>
        <div class="flex">
            <p>Username: </p>
            <p>{{username}}</p>
        </div>
        <div class="flex">
            <p>Email: </p>
            <p>{{email}}</p>
        </div>
        <div class="flex">
            {{#each bookedHotels}}
            <p>Reservations: </p>
            <p>
                <span>{{id}}</span>
            </p>
            {{else}}
             <p>Reservations: </p>
            <p>
                <span>Hilton Toronto, </span>
                <span>Auckland Inn, </span>
                <span>Hotel Berlin, </span>
            </p>
            {{/each}}
        </div>
    </div>
</section>