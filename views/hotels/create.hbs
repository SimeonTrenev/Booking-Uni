<section id="viewAddhotel">
    <h2>Add new hotel</h2>
    <form id="formAddhotel" action="/hotels/create" method="POST">
        <label for="hotel">Hotel name:</label>
        <input type="text"  name="hotel" placeholder="Hotel name">
        <label for="city">City:</label>
        <input type="text"  name="city" placeholder="City">
        <label for="free-rooms">Free rooms:</label>
        <input type="number"  name="freeRooms" placeholder="Free rooms">
        <label for="imgUrl">Image:</label>
        <input type="text"  name="imageUrl" placeholder="https://">

        <input type="submit" class="create" value="Add">
    </form>
</section>